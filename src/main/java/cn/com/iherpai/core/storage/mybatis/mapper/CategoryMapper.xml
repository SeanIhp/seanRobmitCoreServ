<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace命名空间，作用就是对sql进行分类化管理，理解sql隔离 
注意：使用mapper代理方法开发，namespace有特殊重要的作用，namespace等于mapper接口地址
-->
<mapper namespace="cn.com.iherpai.core.storage.mybatis.mapper.CategoryMapper">

	<sql id="queryCommon">
		<if test="id != null">
			AND id = #{id} 
		</if>
		<if test="cid != null">
			AND cid = #{cid} 
		</if>
		<if test="serialId != null">
			AND serialId = #{serialId} 
		</if>
		<if test="name != null">
			AND name = #{name} 
		</if>
		<if test="code != null">
			AND code = #{code} 
		</if>
		<if test="icon != null">
			AND icon = #{icon} 
		</if>
		<if test="intro != null">
			AND intro = #{intro} 
		</if>
		<if test="level != null">
			AND level = #{level} 
		</if>
		<if test="asRoot != null">
			AND asRoot = #{asRoot} 
		</if>
		<if test="hasChild != null">
			AND hasChild = #{hasChild} 
		</if>
		<if test="sequenceNumber != null">
			AND sequenceNumber = #{sequenceNumber} 
		</if>
		<if test="rootId != null">
			AND rootId = #{rootId} 
		</if>
		<if test="rootCid != null">
			AND rootCid = #{rootCid} 
		</if>
		<if test="parentId != null">
			AND parentId = #{parentId} 
		</if>
		<if test="parentCid != null">
			AND parentCid = #{parentCid} 
		</if>
		<if test="status != null">
			AND status = #{status} 
		</if>
		<if test="status_min != null">
			<![CDATA[				
			AND status >= #{status_min} 
			]]> 
		</if>
		<if test="status_max != null">
			<![CDATA[				
			AND status < #{status_max} 
			]]> 
		</if>
	</sql>
	
	
	
	<sql id="updateFields">
		<if test="name != null">
			name = #{name},
		</if>
		<if test="code != null">
			code = #{code},
		</if>
		<if test="icon != null">
			icon = #{icon},
		</if>
		<if test="intro != null">
			intro = #{intro},
		</if>
		<if test="level != null">
			level = #{level},
		</if>
		<if test="asRoot != null">
			asRoot = #{asRoot},
		</if>
		<if test="hasChild != null">
			hasChild = #{hasChild},
		</if>
		<if test="sequenceNumber != null">
			sequenceNumber = #{sequenceNumber},
		</if>
		<if test="rootId != null">
			rootId = #{rootId},
		</if>
		<if test="rootCid != null">
			rootCid = #{rootCid},
		</if>
		<if test="parentId != null">
			parentId = #{parentId},
		</if>
		<if test="parentCid != null">
			parentCid = #{parentCid},
		</if>
		<if test="status != null">
			status = #{status},
		</if>
	</sql>
	



	<insert id="add" parameterType="cn.com.iherpai.core.storage.mybatis.orm.Category">
		INSERT INTO category(
			cid, 
			serialId, 
			name, 
			code, 
			icon,
			intro, 
			level,
			asRoot,
			hasChild,
			sequenceNumber,
			rootId,
			rootCid, 
			parentId, 
			parentCid, 
			createTime, 
			status
		) VALUES (
			#{cid},
			#{serialId},
			#{name},
			#{code},
			#{icon},
			#{intro},
			#{level},
			#{asRoot},
			#{hasChild},
			#{sequenceNumber},
			#{rootId},
			#{rootCid},
			#{parentId},
			#{parentCid},
			#{createTime},
			#{status}
		)
	</insert>
	
	
	
	<delete id="removeById" parameterType="string">
		DELETE 
		FROM 
			category 
		WHERE 
			id = #{id}
	</delete>
	
	
	
	<delete id="remove" parameterType="java.util.HashMap">
		DELETE 
		FROM 
			category 
		<where>
			<include refid="queryCommon"/>
		</where>
	</delete>
	
	
	
	<update id="update" parameterType="java.util.HashMap">
		UPDATE 
			category
		<set>
			<include refid="updateFields"/>
		</set>
		<where>
			<include refid="queryCommon"/>
		</where>
	</update>
	
	
	
	<select id="get" parameterType="java.util.HashMap" resultType="java.util.HashMap">
		SELECT 
			${fields} 
		FROM 
			category 
		<where>
			<include refid="queryCommon"/>
		</where>
	</select>
	
	
	
	<select id="getCount" parameterType="java.util.HashMap" resultType="long">
		SELECT 
			count(id)
		FROM 
			category 
		<where>
			<include refid="queryCommon"/>
		</where>
	</select>
	
	
	<select id="list" parameterType="java.util.HashMap" resultType="cn.com.iherpai.core.storage.mybatis.orm.Category">
		SELECT 
			${fields}
		FROM
			category
		<where>
			<include refid="queryCommon"/>
		</where>
	</select>
	
	
	
</mapper>