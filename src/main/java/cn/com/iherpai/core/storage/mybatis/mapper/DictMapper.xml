<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace命名空间，作用就是对sql进行分类化管理，理解sql隔离 
注意：使用mapper代理方法开发，namespace有特殊重要的作用，namespace等于mapper接口地址
-->
<mapper namespace="cn.com.iherpai.core.storage.mybatis.mapper.DictMapper">

	<sql id="queryCommon">
		<if test="id != null">
			AND id = #{id} 
		</if>
		<if test="nid != null">
			AND nid = #{nid} 
		</if>
		<if test="sid != null">
			AND sid = #{sid} 
		</if>
		<if test="dictGroupId != null">
			AND dict_group_id = #{dictGroupId} 
		</if>
		<if test="dictGroupNid != null">
			AND dict_group_nid = #{dictGroupNid} 
		</if>
		<if test="dictGroupSid != null">
			AND dict_group_sid = #{dictGroupSid} 
		</if>
		<if test="code != null">
			AND code = #{code} 
		</if>
		<if test="name != null">
			AND name = #{name} 
		</if>
		<if test="constCode != null">
			AND const_code = #{constCode} 
		</if>
		<if test="constType != null">
			AND const_type = #{constType} 
		</if>
		<if test="constValue != null">
			AND const_value = #{constValue} 
		</if>
		<if test="constText != null">
			AND const_text = #{constText} 
		</if>
		<if test="sortno != null">
			AND sortno = #{sortno} 
		</if>
		<if test="description != null">
			AND description LIKE "%"#{description}"%" 
		</if>
		<if test="status != null">
			AND status = #{status} 
		</if>
		<if test="statusMin != null">
			<![CDATA[				
			AND status >= #{statusMin} 
			]]> 
		</if>
		<if test="statusMax != null">
			<![CDATA[				
			AND status < #{statusMax} 
			]]> 
		</if>
	</sql>
	
	
	
	<sql id="updateFields">
		<if test="name != null">
			name = #{name} ,
		</if>
		<if test="code != null">
			code = #{code} ,
		</if>
		<if test="constCode != null">
			const_code = #{constCode} ,
		</if>
		<if test="constType != null">
			const_type = #{constType} ,
		</if>
		<if test="constValue != null">
			const_value = #{constValue} ,
		</if>
		<if test="constText != null">
			const_text = #{constText} ,
		</if>
		<if test="sortno != null">
			sortno = #{sortno} ,
		</if>
		<if test="description != null">
			description = #{description} ,
		</if>
		<if test="status != null">
			status = #{status} , 
		</if>
	</sql>
	



	<insert id="add" parameterType="cn.com.iherpai.core.storage.mybatis.orm.Dict">
		INSERT INTO account(
			nid, sid, 
			dict_group_id, dict_group_nid, dict_group_sid, 
			code, name, 			
			const_code,	const_type, const_value, const_text, sortno, description, 
			create_time, status
		) VALUES (
			#{nid},	#{sid},
			#{dict_group_id}, #{dict_group_nid}, #{dict_group_sid}, 
			#{code}, #{name}, 
			#{const_code}, #{const_type}, #{const_value}, #{const_text}, #{sortno},	#{description}, 
			#{create_time}, #{status}
		)
	</insert>
	
	
	
	<delete id="removeById" parameterType="string">
		DELETE 
		FROM 
			dict 
		WHERE 
			id = #{id}
	</delete>
	
	
	
	<delete id="removeByCode" parameterType="string">
		DELETE 
		FROM 
			dict 
		WHERE 
			code = #{code}
	</delete>
	
	
	
	<delete id="remove" parameterType="java.util.HashMap">
		DELETE 
		FROM 
			dict 
		<where>
			<include refid="queryCommon"/>
		</where>
	</delete>
	
	
	
	<update id="update" parameterType="java.util.HashMap">
		UPDATE 
			dict
		<set>
			<include refid="updateFields"/>
		</set>
		<where>
			<include refid="queryCommon"/>
		</where>
	</update>
	
	
	
	<select id="get" parameterType="java.util.HashMap" resultType="java.util.HashMap">
		SELECT 
			${fields} 
		FROM 
			dict 
		<where>
			<include refid="queryCommon"/>
		</where>
	</select>
	
	
	
	<select id="getCount" parameterType="java.util.HashMap" resultType="long">
		SELECT 
			count(id)
		FROM 
			dict 
		<where>
			<include refid="queryCommon"/>
		</where>
	</select>
	
	
	<select id="list" parameterType="java.util.HashMap" resultType="cn.com.iherpai.core.storage.mybatis.orm.Dict">
		SELECT 
			${fields}
		FROM
			dict
		<where>
			<include refid="queryCommon"/>
		</where>
	</select>
	
	
	
	<select id="listByDictGroupId" parameterType="java.util.HashMap" resultType="cn.com.iherpai.core.storage.mybatis.orm.Dict">
		SELECT 
			* 
		FROM 
			dict 
		WHERE
			dict_group_id = #{dictGroupId}
	</select>
	
	
	
</mapper>